<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/splash_bg2"
    tools:context=".presentation.views.splash.SecondSplashFragment">

    <View
        android:id="@+id/backgroundOverlay2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/_18sdp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_splash2"
            android:textSize="@dimen/_22sdp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/_14sdp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/content_splash2"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/gray_20"
            android:lineSpacingMultiplier="1.2"
            android:textAlignment="center"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSplash2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_48sdp"
            android:text="@string/btn_continue"
            android:textSize="@dimen/_15sdp"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:background="@drawable/btn_bg"
            android:textColor="@color/white"
            android:layout_marginVertical="@dimen/_24sdp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>