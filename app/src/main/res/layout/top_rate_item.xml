<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_142sdp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgPoster"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_210sdp"
        android:src="@drawable/ic_launcher_background"
        android:clipToOutline="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:background="@drawable/img_corner_bg_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/imgTag"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_26sdp"
        android:src="@drawable/ic_tag"
        android:paddingBottom="@dimen/_2sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="en"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/_4sdp"
        app:layout_constraintStart_toStartOf="@id/imgTag"
        app:layout_constraintEnd_toEndOf="@id/imgTag"
        app:layout_constraintTop_toTopOf="@id/imgTag"
        app:layout_constraintBottom_toBottomOf="@id/imgTag"/>

    <ImageView
        android:id="@+id/imgStar"
        android:layout_width="@dimen/_14sdp"
        android:layout_height="@dimen/_14sdp"
        android:src="@drawable/star"
        android:tint="@color/aqua"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/txtRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_4_7"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_6sdp"
        app:layout_constraintStart_toEndOf="@id/imgStar"
        app:layout_constraintTop_toTopOf="@id/imgStar"
        app:layout_constraintBottom_toBottomOf="@id/imgStar"/>

    <TextView
        android:id="@+id/txtReleaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023-04-14"
        android:textColor="@color/gray_10"
        android:textSize="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        app:layout_constraintStart_toStartOf="@id/imgStar"
        app:layout_constraintBottom_toTopOf="@id/imgStar"/>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Survive"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        app:layout_constraintBottom_toTopOf="@id/txtReleaseDate"
        app:layout_constraintStart_toStartOf="@id/txtReleaseDate"
        app:layout_constraintEnd_toEndOf="@id/imgPoster"/>

    <ImageView
        android:id="@+id/imgPlay"
        android:layout_width="@dimen/_32sdp"
        android:layout_height="@dimen/_32sdp"
        android:src="@drawable/ic_play_movie"
        app:layout_constraintStart_toStartOf="@id/imgPoster"
        app:layout_constraintEnd_toEndOf="@id/imgPoster"
        app:layout_constraintTop_toTopOf="@id/imgPoster"
        app:layout_constraintBottom_toBottomOf="@id/imgPoster"/>
</androidx.constraintlayout.widget.ConstraintLayout>